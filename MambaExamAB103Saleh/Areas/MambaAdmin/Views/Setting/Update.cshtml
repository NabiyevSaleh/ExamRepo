@using MambaExamAB103Saleh.Models;

@model Setting

<div class="content-wrapper">
    <div class="row">

        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Table</h4>
                    <form class="forms-sample" method="post">
                        <div class="form-group row">
                            <label asp-for="Key" class="col-sm-3 col-form-label">Key</label>
                            <div class="col-sm-9">
                                <input asp-for="Key" class="form-control" placeholder="Key">
                            </div>
                            <span asp-validation-for="Key"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Value" class="col-sm-3 col-form-label">Value</label>
                            <div class="col-sm-9">
                                <input asp-for="Value" class="form-control" placeholder="Value">
                            </div>
                            <span asp-validation-for="Value"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Update</button>
                        <button asp-controller="setting" asp-action="Index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
