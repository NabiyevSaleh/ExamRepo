@using MambaExamAB103Saleh.Models;

@model List<Team>

@{
    int count = 0;
}

<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Team Table</h4>
                    <a asp-controller="team" asp-action="create" class="btn btn-success">Create Table</a>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Profession</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var team in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="~/admin/images/@team.Image" /></td>
                                        <td>@team.Name</td>
                                        <td>@team.Profession</td>
                                        <td><a asp-controller="team" asp-action="update" asp-route-id="@team.Id" class="btn btn-warning" /><i class="mdi mdi-pencil">Update</i></td>
                                        <td><a asp-controller="team" asp-action="delete" asp-route-id="@team.Id" class="btn btn-danger" /><i class="mdi mdi-delete">Delete</i></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>